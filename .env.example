# TYCHERA Investments Website - Environment Variables Template
# Copy this file to .env.local for local development

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID="xiqaa9j2"
NEXT_PUBLIC_SANITY_DATASET="production"
NEXT_PUBLIC_SANITY_API_VERSION="2026-02-05"

# Sanity API Token (Required for content seeding)
# Create at: https://www.sanity.io/manage/personal/tokens
# Permissions: Editor or Admin
SANITY_API_TOKEN="your-sanity-api-token-here"

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Zoho SMTP Configuration (Required for contact form)
# Configure your Zoho Mail SMTP settings
ZOHO_SMTP_HOST="smtp.zoho.com"
ZOHO_SMTP_PORT="465"
ZOHO_SMTP_USER="your-email@tycherainvestments.com"
ZOHO_SMTP_PASSWORD="your-smtp-password"

# Contact Form Configuration
CONTACT_EMAIL_RECIPIENT="contact@tycherainvestments.com"

# Node Environment (automatically set by Next.js)
NODE_ENV="development"
